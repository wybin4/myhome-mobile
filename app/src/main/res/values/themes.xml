<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Myhome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorAccent">@color/purple_500</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/input_border</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_border</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_border</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_border</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconTint">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/input_margin_bottom</item>
    </style>

    <style name="Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopEnd">@dimen/input_border</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_border</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_border</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_border</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginBottom">@dimen/input_margin_bottom</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">15dp</item>
    </style>

</resources>