<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/scroll_view"
            android:paddingBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="28dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/on_error"
                    style="@style/ErrorListLayout"
                    android:visibility="gone"
                    >
                    <include
                        android:id="@+id/error_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/list_error"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/on_empty"
                    style="@style/EmptyListLayout"
                    android:visibility="gone"
                    >
                    <include
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/list_empty"
                        bind:title="@{`События ещё не произошли`}"
                        bind:subtitle="@{`Ждём новостей от управляющей компании. Пока во дворе тихо и спокойно`}"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/on_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="58dp"
                        style="@style/ItemLoading"
                        android:background="@drawable/circle_normal"
                        android:layout_gravity="end"
                        android:layout_marginBottom="25dp"/>
                    <LinearLayout
                        style="@style/ItemLoading"
                        android:layout_height="17dp"
                        android:layout_width="140dp"
                        android:layout_marginBottom="31dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/event_infinite_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/on_success"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <Button
                        android:id="@+id/filter_button"
                        android:layout_width="120dp"
                        style="@style/ActionButtonWithDrawable"
                        android:text="Фильтр"
                        android:drawableLeft="@drawable/filter"
                        android:layout_gravity="end"
                        android:layout_marginBottom="25dp"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/event_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>