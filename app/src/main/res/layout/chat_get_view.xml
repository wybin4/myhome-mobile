<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.myhome.presentation.features.chat.get.ChatGetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="28dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <!--            дата-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_normal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сегодня"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!--            сообщение-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <!--                    текст-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corner_button"
                            android:backgroundTint="@color/primary_light"
                            >
                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Разберитесь, пожалуйста, с 23 квартирой"
                                android:textColor="@color/black"
                                android:padding="12dp"/>
                        </LinearLayout>
                        <!--                    хвост-->
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:rotation="120"
                            android:layout_marginLeft="-5dp"
                            android:src="@drawable/chat_tail"
                            app:tint="@color/primary_light"
                            android:layout_gravity="end|bottom"/>
                    </LinearLayout>

                    <!--                время-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="10:15"
                        android:layout_gravity="end"/>

                </LinearLayout>

                <!--            сообщение-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <!--                    хвост-->
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end|bottom"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="-10dp"
                            android:rotation="120"
                            android:src="@drawable/chat_tail"
                            app:tint="@color/black" />

                        <!--                    текст-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corner_button"
                            >
                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Попробуем поговорить, но ничего не обещаем."
                                android:textColor="@color/white"
                                android:padding="12dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--                время-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="10:22"/>

                </LinearLayout>

            </LinearLayout>

<!--            поле для ввода-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/primary_light"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smile"
                    android:layout_marginRight="16dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="text|textNoSuggestions"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send_arrow"
                    android:layout_marginLeft="16dp"/>

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>