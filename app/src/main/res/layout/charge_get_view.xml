<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.myhome.presentation.features.charge.get.ChargeGetViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/scroll_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/on_network_error"
                    style="@style/ErrorListLayout"
                    android:visibility="gone"
                    >
                    <include
                        android:id="@+id/network_error_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/list_network_error"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/on_code_error"
                    style="@style/ErrorListLayout"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    >
                    <include
                        android:id="@+id/code_error_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/list_code_error"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/on_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="28dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            >

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                style="@style/ChargeBill"
                                android:layout_width="wrap_content"
                                android:layout_height="450dp"
                                android:layout_marginTop="33dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="66dp"
                                    android:layout_height="66dp"
                                    android:background="@drawable/circle_button_night"
                                    style="@style/FloatingActionButtonSubstrate"
                                    >
                                    <LinearLayout
                                        android:layout_width="66dp"
                                        android:layout_height="66dp"
                                        android:background="@drawable/circle_normal"
                                        android:backgroundTint="@color/primary_loading"/>
                                </LinearLayout>

                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_width="150dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginBottom="2dp"/>
                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_width="130dp"
                                    android:layout_marginTop="5dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="185dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="15dp">
                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_marginRight="60dp"/>
                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.4"
                                        android:layout_width="0dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="40dp"
                                    android:paddingHorizontal="15dp">

                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_marginRight="60dp"/>
                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.4"
                                        android:layout_width="0dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="40dp"
                                    android:paddingHorizontal="15dp">

                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_marginRight="60dp"/>
                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.4"
                                        android:layout_width="0dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="50dp"
                                    android:paddingHorizontal="15dp">

                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_marginRight="60dp"/>
                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.4"
                                        android:layout_width="0dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="30dp"
                                    android:paddingHorizontal="15dp">

                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_marginRight="60dp"/>
                                    <LinearLayout
                                        style="@style/ItemLoading"
                                        android:layout_height="17dp"
                                        android:layout_weight="0.4"
                                        android:layout_width="0dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Card"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="22dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/Text"
                                android:text="История платежей"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="18dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="14dp">
                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_weight="0.3"
                                    android:layout_width="0dp"
                                    android:layout_marginRight="15dp"/>
                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_weight="0.7"
                                    android:layout_width="0dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="14dp">
                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_weight="0.3"
                                    android:layout_width="0dp"
                                    android:layout_marginRight="15dp"/>
                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_weight="0.7"
                                    android:layout_width="0dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_weight="0.3"
                                    android:layout_width="0dp"
                                    android:layout_marginRight="15dp"/>
                                <LinearLayout
                                    style="@style/ItemLoading"
                                    android:layout_height="17dp"
                                    android:layout_weight="0.7"
                                    android:layout_width="0dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/on_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="28dp"
                    android:layout_marginBottom="100dp"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clipChildren="false"
                        >

                        <LinearLayout
                            style="@style/ChargeBill"
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            android:orientation="vertical"
                            android:layout_marginTop="33dp"
                            android:layout_marginBottom="15dp"
                            >
                            <LinearLayout
                                style="@style/CircleBlackPrimary"
                                android:backgroundTint="@color/primary"
                                android:layout_width="66dp"
                                android:layout_height="66dp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="-33dp"
                                >
                                <ImageView
                                    style="@style/IconWhite"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/charge_money_big"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:clipChildren="false"
                                android:layout_marginBottom="30dp">

                                <TextView
                                    style="@style/Text"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="2dp"
                                    android:text="@{viewModel.chargeParcelable.managementCompanyName}"
                                    android:textSize="18dp"
                                    android:textStyle="bold"/>
                                <TextView
                                    style="@style/DescriptionText"
                                    android:layout_marginTop="3dp"
                                    android:text="@{viewModel.chargeParcelable.periodName}"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="28dp">

                                    <TextView
                                        android:layout_gravity="start"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="25dp"
                                        style="@style/Text"
                                        android:text="Задолженность"/>
                                    <TextView
                                        android:gravity="end"
                                        android:layout_marginRight="32dp"
                                        style="@style/Text"
                                        android:text="@{viewModel.spd.formatDebt()}"
                                        android:fontFamily="@font/robotomedium"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="40dp">

                                    <TextView
                                        android:layout_gravity="start"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="25dp"
                                        style="@style/Text"
                                        android:text="Пеня"/>
                                    <TextView
                                        android:gravity="end"
                                        android:layout_marginRight="32dp"
                                        style="@style/Text"
                                        android:text="@{viewModel.spd.formatPenalty()}"
                                        android:fontFamily="@font/robotomedium"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="38dp">

                                    <TextView
                                        android:layout_gravity="start"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="25dp"
                                        style="@style/Text"
                                        android:text="Начислено"/>
                                    <TextView
                                        android:gravity="end"
                                        android:layout_marginRight="32dp"
                                        style="@style/Text"
                                        android:text="@{viewModel.spd.formatAmount()}"
                                        android:fontFamily="@font/robotomedium"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="45dp">

                                    <TextView
                                        android:layout_gravity="start"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="25dp"
                                        style="@style/Text"
                                        android:text="Итого"/>
                                    <TextView
                                        android:gravity="end"
                                        android:layout_marginRight="32dp"
                                        style="@style/Text"
                                        android:text="@{viewModel.chargeParcelable.formatOriginalDebt()}"
                                        android:fontFamily="@font/robotomedium"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="30dp">

                                    <TextView
                                        android:layout_gravity="start"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="25dp"
                                        style="@style/Text"
                                        android:text="Остаток"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginRight="32dp"
                                        android:text="@{viewModel.chargeParcelable.formatOutstandingDebt()}"
                                        android:textColor="@color/primary"
                                        android:fontFamily="@font/robotomedium"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/on_success_payment_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Card"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="22dp"
                            android:orientation="vertical"
                            android:visibility="gone"
                            >
                            <TextView
                                style="@style/Text"
                                android:text="История платежей"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="18dp"/>

                            <LinearLayout
                                android:id="@+id/payments_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/on_code_error_payment_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Card"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="22dp"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <TextView
                                style="@style/Text"
                                android:text="Не удалось получить историю платежей"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/on_empty_payment_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Card"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="22dp"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <TextView
                                style="@style/Text"
                                android:text="Нет данных о платежах"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/on_success_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:paddingHorizontal="28dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/get_spd_button"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_button_night"
                style="@style/FloatingActionButtonSubstrate"
                android:layout_marginEnd="10dp"
                >
                <TextView
                    android:background="@drawable/circle_button_night"
                    android:backgroundTint="@color/primary_light"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textColor="@color/primary"
                    android:text="Квитанция"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_charge_button"
                android:layout_weight="1"
                android:layout_width="match_parent"
                style="@style/BlackWhiteButtonLayout"
                android:layout_height="52dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                >
                <TextView
                    style="@style/WhiteBlackText"
                    android:text="Оплатить"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/on_loading_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="28dp"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_button_night"
                style="@style/FloatingActionButtonSubstrate"
                android:layout_marginEnd="10dp"
                >
                <LinearLayout
                    style="@style/ItemLoading"
                    android:layout_height="52dp"
                    android:background="@drawable/circle_button_night"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_button_night"
                style="@style/FloatingActionButtonSubstrate"
                android:layout_marginLeft="10dp"
                >
                <LinearLayout
                    style="@style/ItemLoading"
                    android:layout_height="52dp"
                    android:background="@drawable/circle_button_night"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>